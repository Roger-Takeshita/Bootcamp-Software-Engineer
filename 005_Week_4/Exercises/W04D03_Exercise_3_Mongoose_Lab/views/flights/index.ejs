<%- include('../partials/header') %>
   <table class="table">
      <thead>
         <tr class="columns">
            <th>Airport</th>
            <th>Air Line</th>
            <th>Flight No</th>
            <th>Gate</th>
            <th>From</th>
            <th>To</th>
            <th>Destination</th>
            <th>Departs</th>
            <th>Status</th>
         </tr>
      </thead>
      <tbody>
         <% flights.forEach( function(flight) { %>
            <% if (flight.status === "Done") { %>
               <tr class="done">
            <% } else if (flight.status === "Cancelled") { %>
               <tr class="cancelled">
            <% } else if ((flight.status === "Confirmed" || flight.status === "On Time") && new Date() < flight.departs) { %>
               <tr class="confirmed">
            <% } else { %>
               <tr class="<%= new Date() > flight.departs ? 'passed' : '' %>">
            <% } %>
               <td><%= flight.airport      %></td>
               <td><%= flight.airLine      %></td>
               <td><%= flight.flightNo     %><a href="/flights/<%= flight._id %>" class="hyperlink"> (details)</a></td>
               <td><%= flight.gate         %></td>
               <td><%= flight.from         %></td>
               <td><%= flight.to           %></td>
               <td><%= flight.destination  %></td>
               <td><%= flight.departs      %></td>
               <td><%= flight.status       %></td>
            </tr>
         <% }) %>
      </tbody>
   </table>
   <div>
      <button class="btn btn-primary" onclick="location.href='/flights/new'">Add New Flight</button>
   </div>
<%- include('../partials/footer') %>